    /* CSS code for styling the page */
body {
  background: linear-gradient(to bottom right, #336699, #66CCFF);
  background-size: cover;
  background-position: center;
  font-family: sans-serif;
  font-size: 16px;
  color: #333;
}

.container {
  max-width: 90%;
  margin: 20px auto;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 18px;
  height: auto;
  width: 75%;
}

form {
  margin-bottom: 10px;
}

label {
  display: inline-block;
  width: 100px;
  margin-right: 5px;
  font-weight: bold;
}

input[type="number"] {
  width: 60px;
  padding: 5px;
  font-size: inherit;
}

button[type="submit"] {
  padding: 5px 10px;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: inherit;
}

ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

li {
  padding: 10px;
  margin-bottom: 5px;
  border-radius: 5px;
  color: #fff;
}

.temperature {
  background-color: #4CAF50;
}

.temperature-warning {
  background-color: #f44336;
}

  </style>
  
</head>
<body>
  <div class="container">
    <h1>Temperature Sensor</h1>
    <form method="POST">
      <label for="temperature">Temperature:</label>
      <input type="number" name="temperature" required>
      <button type="submit" onclick="changeBackgroundColor()">Add</button>
    </form>
    <ul>
      <% for (let i = 0; i < temperatures.length; i++) { %>
        <li id="temp-<%= i %>" class="temperature">Temperature <%= i + 1 %>: <%= temperatures[i] %> &deg;C</li>
      <% } %>
    </ul>
  </div>
</body>
